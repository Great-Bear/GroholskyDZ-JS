<Window x:Class="XML_LINQ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XML_LINQ"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Enter type search" HorizontalAlignment="Left" Margin="148,134,0,0" VerticalAlignment="Top" Width="116"/>
        <ComboBox ItemsSource="{Binding TypeSearch}" SelectedItem="{Binding SelectedTypeSearch}" HorizontalAlignment="Left" Margin="148,165,0,0" VerticalAlignment="Top" Width="120"/>
        <ListBox ItemsSource="{Binding FoundStones}" Margin="148,223,381,64"/>
        <Label Content="Result search" HorizontalAlignment="Left" Margin="226,192,0,0" VerticalAlignment="Top" Width="122"/>
        <Button Content="Search" Click="Button_Click" HorizontalAlignment="Left" Margin="414,165,0,0" VerticalAlignment="Top" RenderTransformOrigin="0,-0.203"/>
        <TextBox x:Name="valueSearch" HorizontalAlignment="Left" Margin="280,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Value search" HorizontalAlignment="Left" Margin="280,134,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
